  {% schema %}
  {
      "name": "Hero Section",
      "settings": [
          {
            "type": "checkbox",
            "id": "toggle",
            "label": "Show/Hide",
            "default": true
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "text",
            "id": "content_text",
            "label": "Text"
