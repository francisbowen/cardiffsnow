{% if section.settings.toggle == true %}
    <div id="hero">    
        <div class="row">
            <div class="col-md-6">
                <div class="image-wrapper">
                    <div class="image-holder">
                        {% if section.settings.image != blank %}
                            <img src="{{ section.settings.image | img_url: 'master' }}" alt="image" />
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="content-wrapper">
                    <div class="content-holder">
                        {% if section.settings.heading != blank %}
                            <h1 class="delay" data-splitting="lines" data-scroll>{{ section.settings.heading }}</h1>            
                        {% endif %}
                        {% if section.settings.content_text != blank %}
                            <h3>{{ section.settings.content_text }}</h3>
                        {% endif %}
                    </div>
                    {% if section.settings.demo_url != blank %}
                    <a href="{{ section.settings.demo_url }}">
                    {{ section.settings.demo_text }} 
                    <div class="arrow">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 82 52">
                        <path class="arrow-circle" d="M56 51c-13.8 0-25-11.2-25-25S42.2 1 56 1s25 11.2 25 25-11.2 25-25 25zm0-49C42.8 2 32 12.8 32 26s10.8 24 24 24 24-10.8 24-24S69.2 2 56 2z"></path>
                        <path class="arrow-line" d="M1 25h55v1H1z"></path>
                        <path class="arrow-point" d="M54 20l6 5.5-6 5.5V20z"></path>
                        </svg>
                    </div>
                    </a>                    
                    {% endif %}
                </div>
            </div>
        </div>        

        <style>
            .image-wrapper{
                background: #49536a;
                height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            .image-wrapper .image-holder{
                position: relative;
                top: 20px;
                left: 85px;
            }
            .content-wrapper{
                height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
                position: relative;
            }
            .content-wrapper .content-holder{
                position: relative;
                left: -18%;
                text-align: right;
            }
            .content-wrapper h1{
                color: #232122;
                font-size: 4.5rem;
            }
            .content-wrapper h3{
                z-index: 2;
                margin-bottom: 0;
                width: 290px;
                bottom: 30%;
                float: right;
                font-family: nimbus-sans-extended,sans-serif;
                font-size: 14px;
                color: #ac8b33;
                line-height: 1.3;
                text-transform: uppercase;
            }
            .content-wrapper a{
                display: -ms-flexbox;
                display: flex;
                -ms-flex-align: center;
                position: absolute;
                left: -40px;
                bottom: 8%;
                width: 100%;
                align-items: center;
                color: #ac8b33;
                font-size: .75rem;
                text-transform: uppercase;
                font-weight: 700;
                transform: translateX(5rem);
                transition: transform 2.5s cubic-bezier(.14,.99,.43,.99);
            }
            .content-wrapper a svg{
                fill: #ac8b33;
            }
            .content-wrapper a svg path{
                fill: #ac8b33;
            }
            @media only screen and (max-width: 1600px){
                .content-wrapper .content-holder{
                    left: -25%;
                }
                .content-wrapper h1{
                    font-size: 4rem;
                }
            }
            @media only screen and (max-width: 1440px){
                .content-wrapper h1 {
                    font-size: 3.6rem;
                }
            }
            @media only screen and (max-width: 1366px){
                .content-wrapper h1 {
                    font-size: 3.45rem;
                }                
            }
            @media only screen and (max-width: 1280px){
                .content-wrapper .content-holder{
                    left: -19%;
                }
            }
            @media only screen and (max-width: 991px){
                .image-wrapper{
                    height: auto
                }
                .content-wrapper{
                    height: auto;
                }
                .image-wrapper .image-holder{
                    top: inherit;
                    left: inherit; 
                }
                .content-wrapper .content-holder{
                    left: 0;
                    margin-top: 50px;
                }
                .content-wrapper .content-holder h1{
                    text-align: left; 
                    width: 100%;
                    margin-bottom: 15px;
                    font-size: 2.5rem;
                } 
                .content-wrapper h3{
                    padding-right: 15px;
                }
                .content-wrapper a{
                    left: -70px;
                    bottom: -70px;
                }
            }            
            @media only screen and (max-width: 767px){
                .template-index #hero{
                    padding-top: 3rem;
                }
                .content-wrapper .content-holder h1{
                    font-size: 1.7rem;
                }
                .template-index #hero{
                    height: auto;
                }                
                .content-wrapper .content-holder{
                    margin-top: 20px;
                }
                .content-wrapper{
                    display: block;
                }
                .content-wrapper a{
                    position: relative;
                    top: inherit;
                    left: -95px;
                    bottom: inherit;
                    right: inherit;
                    width: 100%;
                }
            }
        </style>


