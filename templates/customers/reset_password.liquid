<div id="account">
<div id="wrap">
  <div class="int-xxs-v-3 int-sm-v-6">
    <div class="container">
      <div class="row center-xxs">
        <div class="col-xxs-12 col-md-8">
          <h1>{{ 'customer.reset_password.title' | t }}</h1>

          <div class="rte">
            <div class="row center-xxs">
              <div class="col-xxs-12 col-sm-6">
                <div class="customer__account-form text-center">

                  <div class="form-vertical">
                    {% form 'reset_customer_password' %}
                      <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

                      {{ form.errors | default_errors }}

                      <label for="ResetPassword" class="label--hidden">{{ 'customer.reset_password.password' | t }}</label>
                      <div class="input">
                        <input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full {% if form.errors contains 'password' %} form-error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}">
                      </div>

                     <label for="PasswordConfirmation" class="label--hidden">{{ 'customer.reset_password.password_confirm' | t }}</label>
                      <div class="input">
                        <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full {% if form.errors contains 'password_confirmation' %} form-error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
                      </div>

                      <input type="submit" class="btn" value="{{ 'customer.reset_password.submit' | t }}">
                    {% endform %}
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>